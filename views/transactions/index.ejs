<div class="container">
    <div class="row mt-3 p-2 justify-content-center">
        <div class="col-12">
            <h3 style="text-align: center">Search Transactions</h3>
        </div>
    </div>
    <div class="row mt-3 p-2">
        <div class="col-12">
        <form id="search-form" class="form-inline" method="POST" action="/transaction">
            <div class="form-group-inline">
                <div class="col-md-3 col-12 mt-2">          
                    <input type="text" class="form-control" id="tid" placeholder="Transaction ID" name="tid">
                </div>
            </div>
            <div class="form-group-inline">
                <div class="col-md-3 col-12 mt-2">          
                    <input type="text" class="form-control" id="mobile" placeholder="03xx-xxxxxxx" name="mobile">
                </div>
            </div>
            <div class="form-group-inline">        
                <div class="col-md-3 col-12 mt-2">
                    <input type="submit" class="form-control btn btn-success" name="submit" value="Search">
                </div>
            </div>
            <span id="error" style="color: red;"></span>
        </form>        
    </div>
</div>
    <div class="row justify-content-center mt-5">
        <% for (var i = 0; i < transaction.length; i++) { %>
            <div class="col-md-8 col-12" id="transaction-detail">
                <h6>Total: <%=pages %></h6>
                <p>Exchange Rate: <%=exchangeRate  %> </p>
                <div class="card" style="width: 100%;">
                    <div class="card-body">
                      <h5 id='transaction_id' class="card-title"><%= transaction[i].transactionID %></h5>
                      <h6 id= 'mbl' class="card-subtitle mb-2 text-muted"><%= transaction[i].mobile %></h6>
                      <ul class="list-group list-group-flush">
                        <li id='account' class="list-group-item">Account: <b><%= transaction[i].accountNo %></b></li>
                        <li id='bank' class="list-group-item">Bank: <b><%=transaction[i].bankID %></b></li>
                        <li id='amount' class="list-group-item">Amount Transfered: <b>$<%= parseFloat(parseFloat(transaction[i].amount)*exchangeRate).toFixed(3) %></b></li>
                        <li id='cnic' class="list-group-item">CNIC: <b><%= transaction[i].CNIC %></b></li>
                        <li id='email' class="list-group-item">Email: <b><%= transaction[i].email %></b></li>
                        <li id='datetime' class="list-group-item">Date Time: <b><%= transaction[i].datetime %></b></li>
                      </ul>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-sm-6 col-12">
            <% current = parseInt(current);
            if (pages > 0) { %>
                <ul class="pagination text-center" style="text-align: center">
                    <% if (current == 1) { %>
                        <li class="disabled mr-5 px-3 py-2" style="background-color: gray; color: white; font-size:large; width:100px"><a>Previous</a></li>
                    <% } else { %>
                        <li class="mr-5 px-3 py-2" style="background-color: blue; color: white; font-size:large; width:100px"><a style="text-decoration:none; color: white" href="/transactions/<%= current-1 %>">Previous</a></li>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled ml-auto px-3 py-2" style="background-color: gray; color: white; font-size:large; width:100px"><a>Next</a></li>
                    <% } else { %>
                        <li class="ml-auto px-3 py-2" style="background-color: blue; color: white; font-size:large; width:100px"><a style="text-decoration:none; color: white;" href="/transactions/<%= current+1 %>">Next</a></li>
                    <% } %>
                </ul>
            <% } %>
        </div>
    </div>
        
    </div>
  